{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",         // âœ… REQUIRED for Expo Router + TS
    "baseUrl": ".",                         // ðŸ‘ˆ Root should be "."
    "paths": {
      "@/*": ["src/*"]                      // âœ… So "@/service" = "src/service"
    },
    "skipLibCheck": true,                   // âœ… Fixes .d.ts errors from node_modules
    "types": ["react", "react-native"]      // âœ… Type support for JSX/Native APIs
  },
  "include": [
    "src",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
